@model Project_Ecomm_App_1035.Model.CoverType
@{
    var title = Model.Id != 0 ? "Edit Cover Type" : "New Cover Type";
    ViewData["Title"] = "Upsert";
}
<form method="post">
    <div class="row">
        <div class="col-10 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row m-2 p-2">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-2 p-2">
                <div class="col-8 offset-4">
                    @if(Model.Id!=0)
                    {
                        <partial name="_EditAndBackToListButtton" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButtton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
} 