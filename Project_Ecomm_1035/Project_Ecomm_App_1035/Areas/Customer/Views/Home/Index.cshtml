@model IEnumerable<Project_Ecomm_App_1035.Model.Product>
@*<h2 class="text-primary text-center">@*
        <i class=" fas  fa-smile" style="color: #325ea9;">*@
          @*//  Welcome to Website*@
@*<i class="fa- fa-face-smile-horns" style="--fa-primary-color: #2e4e84; --fa-secondary-color: #2e4e84;"></i>      
*@
<div class="row">
    <marquee behavior ="scroll" direction="left" class="text-center fw-bold" style="color:aqua; font-family:Arial,sans-serif;font-size:3em;"> Welcome To Website</marquee>
</div>
<form class="d-flex">
    <input class="form-control me-sm-2" name="search" placeholder="search" />
    <button class="btn btn-success my-2 my-sm-2 " type="submit">Search</button>
</form>
<div class="continer rounded border">
<div class="row">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="@product.ImageUrl" class="card-img-top rounded" width="100" height="300" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50;width:500px;height:500px;">@product.Title</b></p>
                            <p class="card-title text-primary">by <b>@product.Author</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>List Price: <strike><b class="">$@product.ListPrice.ToString("0.00")</b></strike></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">As low as: <b class="">$@product.Price100.ToString("0.00")</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">
                            <i class="fas fa-info-circle"></i>
                           
                            Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
</div>