<div class="row">
    <div class="col-9">
        <h2 class="text-primary">CompanyList</h2>
    </div>
    <div class="col-3">
        <a asp-action="Upsert"class="btn btn-info form-control">
            <i class="fas fa-plus"></i>&nbsp;New Company
        </a>
    </div>
    <div class="border m-2 p-2">
        <table id="tblData" class="table table-striped table-bordered table-active">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>StreetAddress</th>
                    <th>City</th>
                    <th>State</th>
                    <th>PhoneNumber</th>
                    <th>Is Authorized</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section scripts
{
    <script src="~/js/Company.js"></script>
}